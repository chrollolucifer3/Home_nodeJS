doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css',
        integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
        link(rel="stylesheet", href="/css/style.css")
    
        title Create User
    body 
        include ./includes/header

        .container.pd-100.d-flex.justify-content-center
            .form-container
                p.title Create User
                form.form(action=`/create-user` method='post' enctype="multipart/form-data")
                    label(for="username") Username: 
                    input.input(type="text" name="username" placeholder='Username' required) 
                    label(for="password") Password: 
                    input.input(type="password" name="password" placeholder='Password' required) 
                    label(for="role") Role: 
                    select.input(name="role" required)
                        option(value="user" selected) Normal User 
                        option(value="admin") Administrator 
                    input.input(type="file" name="avatar" required)
                    if errMessage
                    p.error=errMessage
                    button.form-btn(type="submit") Create User



        include ./includes/footer

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', 
    integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')
