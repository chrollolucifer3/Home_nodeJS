doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
        link(rel="stylesheet", href="/css/style.css")
        title Apartment
    body 
        include ./includes/header
        .container
            h1.mt-4 List Apartment
            .row
                each apartment in apartments
                    .col-md-3.mt-4
                        .card
                            img.card-img-top(src=`img/${apartment.cover}`)
                            .card-body
                                h5.card-title=apartment.title
                                p.card-text=apartment.description
                            ul.list-group.list-group-flush
                                li.list-group-item Address: 
                                    | 
                                    em #{apartment.address}
                            if username
                                .card-body    
                                    a.card-link(href=`/update-apartment/${apartment._id}`) Update
                                    a.card-link(href=`/delete-apartment/${apartment._id}`) Delete
        include ./includes/footer

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')